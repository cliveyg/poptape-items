{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "items schema",
  "type": "object",
  "properties": {
    "item_ids": {
      "type": "array",
      "uniqueItems": true,
      "minItems": 0,
      "maxItems": 100,
      "items": { 
        "type": "string",
        "minLength": 36, "maxLength": 36,
        "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}"
      }
    }
  },
  "additionalProperties": false,
  "required": ["item_ids"]
}
